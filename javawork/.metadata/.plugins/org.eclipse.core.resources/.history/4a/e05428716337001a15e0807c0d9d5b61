package api.io;

import java.io.BufferedReader;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;
import java.util.HashMap;

public class ScoreTest {

	public static void main(String[] args) {
		BufferedReader br = null;
		try {
			br = new BufferedReader(new FileReader("src/data/score.txt"));
				int sum=0;
				int count=0;
				while(br.ready()) {
					count++;
					sum=sum+Integer.parseInt(br.readLine().split(",")[1]);
					System.out.println(br.readLine().split(",")[0]+"ÀÇ Á¡¼ö´Â "+br.readLine().split(",")[1]+"Á¡");
				}
			 System.out.println("ÃÑÁ¡: "+sum);
			 System.out.println("Æò±Õ: "+(sum/(double)count));
			
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		} catch (IOException e) {
			e.printStackTrace();
		}
		finally {
			try {
				if(br!=null)
				br.close();
			} catch (IOException e) {
				e.printStackTrace();
			}
		}

	}

}
